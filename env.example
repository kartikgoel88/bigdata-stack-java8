# Big Data Stack Environment Variables
# Copy this file to .env and modify as needed: cp env.example .env

# ========== Software Versions ==========
HADOOP_VERSION=3.3.6
HIVE_VERSION=3.1.3
SPARK_VERSION=3.5.8
POSTGRES_VERSION=13
JAVA_VERSION=8

# ========== User IDs ==========
POSTGRES_USER=hive
HIVE_USER=hive

# ========== Passwords ==========
POSTGRES_PASSWORD=hive
HIVE_PASSWORD=hive

# ========== Database Names ==========
POSTGRES_DB=metastore
HIVE_DB=hive

# ========== Home Paths ==========
HADOOP_HOME=/opt/hadoop
HIVE_HOME=/opt/hive
SPARK_HOME=/opt/spark

# ========== Configuration Directories ==========
HADOOP_CONF_DIR=/opt/hadoop/etc/hadoop
HIVE_CONF_DIR=/opt/hive/conf
SPARK_CONF_DIR=/opt/spark/conf

# ========== Ports ==========
# Hadoop Ports (Host:Container)
NAMENODE_WEB_PORT=9870
NAMENODE_WEB_PORT_CONTAINER=9870
NAMENODE_RPC_PORT=9000
NAMENODE_RPC_PORT_CONTAINER=9000
DATANODE_PORT=9864
DATANODE_PORT_CONTAINER=9864
RESOURCEMANAGER_PORT=8088
RESOURCEMANAGER_PORT_CONTAINER=8088
NODEMANAGER_PORT=8042
NODEMANAGER_PORT_CONTAINER=8042

# PostgreSQL Ports
POSTGRES_PORT=5432
POSTGRES_PORT_CONTAINER=5432

# Hive Ports
HIVE_METASTORE_PORT=9083
HIVE_METASTORE_PORT_CONTAINER=9083
HIVESERVER2_PORT=10000
HIVESERVER2_PORT_CONTAINER=10000

# Spark Ports
SPARK_MASTER_PORT=7077
SPARK_MASTER_PORT_CONTAINER=7077
SPARK_MASTER_WEB_PORT=8080
SPARK_MASTER_WEB_PORT_CONTAINER=8080
SPARK_WORKER_PORT=8081
SPARK_WORKER_PORT_CONTAINER=8081
SPARK_HISTORY_PORT=18080
SPARK_HISTORY_PORT_CONTAINER=18080

# ========== Service Hostnames ==========
POSTGRES_HOST=postgres
NAMENODE_HOST=namenode
HIVE_METASTORE_HOST=hive-metastore
SPARK_MASTER_HOST=spark-master

# ========== Spark Master URL ==========
SPARK_MASTER=spark://spark-master:7077

# ========== Wait/Retry Configuration ==========
WAIT_RETRIES=60
