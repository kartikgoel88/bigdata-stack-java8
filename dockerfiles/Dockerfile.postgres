# Build argument for PostgreSQL version (can be overridden from .env via docker-compose)
ARG POSTGRES_VERSION=13
FROM postgres:${POSTGRES_VERSION}

# Install network utilities
RUN apt-get update && apt-get install -y --no-install-recommends \
    netcat-openbsd \
    iputils-ping \
    dnsutils \
    && rm -rf /var/lib/apt/lists/*

# Set timezone
ENV TZ=UTC
ENV PGTZ=UTC

# Keep the default postgres entrypoint
# The postgres image will handle initialization automatically

